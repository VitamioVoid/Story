<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/storyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="10dp"
            android:maxLines="4"
            android:text="@string/content_exp"
            android:textColor="@color/storyContentColor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mContentImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/talk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_talk" />

        <TextView
            android:id="@+id/talkNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/talk"
            android:text="200+"
            android:textColor="@color/textTitleColor" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/talkNum"
            android:src="@drawable/icon_heart" />

        <TextView
            android:id="@+id/heartNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/heart"
            android:text="200+"
            android:textColor="@color/textTitleColor" />

        <Button
            android:id="@+id/mShareBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_share" />
    </RelativeLayout>

</LinearLayout>