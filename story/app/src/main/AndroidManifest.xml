<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qf.story">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".activity.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ModifyPwdActivity" />
        <activity android:name=".activity.ModifyAliasActivity" />
        <activity android:name=".activity.ModifyBirthDayActivity" />
        <activity android:name=".activity.ModifyGenderActivity" />
        <activity android:name=".activity.ModifyEmailActivity" />
        <activity android:name=".activity.PersonalCenterActivity" />
        <activity android:name=".activity.HomePageActivity" />
        <activity android:name=".activity.StoryDetailActivity" />
        <activity android:name=".activity.ModifySignatureActivity" />
        <activity android:name=".activity.NewStoryActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.RecordActivity" />
        <activity android:name=".activity.MyStoryActivity" />
    </application>

</manifest>
